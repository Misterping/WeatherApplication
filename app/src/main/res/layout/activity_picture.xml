<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/burlywood"
    tools:context="com.example.beta_0.picture">

    <!--底部传送门-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/Linlayout_shadow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <com.zhy.android.percent.support.PercentRelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

                <ImageButton
                    android:id="@+id/picture_weather"
                    android:src="@drawable/weather_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:gravity="center_horizontal"
                    app:layout_marginTopPercent="27%h"
                    app:layout_marginLeftPercent="10%w"
                    >
                </ImageButton >


                <ImageButton
                    android:id="@+id/picture_picture"
                    android:src="@drawable/picture_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:gravity="center_horizontal"
                    app:layout_marginTopPercent="30%h"
                    app:layout_marginLeftPercent="47%w"
                    >
                </ImageButton >


                <ImageButton
                    android:id="@+id/picture_personal"
                    android:src="@drawable/me_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff"
                    android:gravity="center_horizontal"
                    app:layout_marginTopPercent="25%h"
                    app:layout_marginLeftPercent="83%w"
                    >
                </ImageButton >

            </com.zhy.android.percent.support.PercentRelativeLayout>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
